<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="admin-1column" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/page_configuration.xsd">
	<update handle="editor"/>
    <body>
        <referenceBlock name="menu">
            <action method="setActive">
                <argument name="itemId" xsi:type="string">Bhavin_PdfInvoice::pdftemplate</argument>
            </action>
        </referenceBlock>
        <referenceBlock name="page.title">
            <action method="setTitleClass">
                <argument name="class" xsi:type="string">complex</argument>
            </action>
        </referenceBlock>
        <referenceContainer name="content">                
             <uiComponent name="sales_pdftemplate_edit"/>
             <block class="Bhavin\PdfInvoice\Block\Adminhtml\Pdftemplate\Edit\Buttons" name="bhavin_pdfinvoice_buttons"/>
        </referenceContainer>
    </body>
</page>
